                    <StackLayout HorizontalOptions="Start">
                        <Label Margin="5,0,0,0" Text="Ganador :" FontSize="Title" FontAttributes="Bold" TextColor="White" />
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="1">
                    <StackLayout HorizontalOptions="StartAndExpand">
                        <Label  Text="{Binding Resultado.ganador}" FontSize="Title" FontAttributes="Bold" TextColor="White"/>
