                <Grid Grid.Row="1" Grid.Column="0">
                    <StackLayout HorizontalOptions="Start">
                        <Label Margin="5,0,0,0" Text="Fecha :" FontSize="Title" FontAttributes="Bold" TextColor="White" />
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1">
                    <StackLayout HorizontalOptions="StartAndExpand">
                        <Label  Text="{Binding Resultado.fecha}" FontSize="Title" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>
            </Grid>

            
