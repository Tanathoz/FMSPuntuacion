<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FMSPuntuacion.Vistas.Resultado"
             Title="Resultado Obtenido ">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
                <RowDefinition Height="100" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60" />
                <RowDefinition Height="100" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" BackgroundColor="#032aac">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <StackLayout HorizontalOptions="Center">
                        <Label  Text="Player 1 :" FontSize="Medium" FontAttributes="Bold" TextColor="White" />
                    </StackLayout>
                </Grid>


                <Grid Grid.Row="0" Grid.Column="1">
                    <StackLayout HorizontalOptions="StartAndExpand">
                        <Label x:Name="Player1" Text="{Binding player1}" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0">
                    <StackLayout HorizontalOptions="Center">
                        <Label  Text="Puntos Totales :" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1">
                    <StackLayout HorizontalOptions="Start">
                        <Label x:Name="TotalFinal" Text="{Binding sumaTotalP1}" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>

                <Grid Grid.Row="2" Grid.Column="0">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Respuestas :" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1" >
                    <StackLayout HorizontalOptions="Start">
                        <Label x:Name="Respuestas" Text="{Binding respuestasP1}" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>

               

                <!-- Los campos para guardar en la base los datos-->
                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="SumaEasy" Text="{Binding suma}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="SumaEasyP2" Text="{Binding sumaP2}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="HardMode" Text="{Binding sumaHardModeP1}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>


                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="HardModeP2" Text="{Binding sumaHardModep2}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="TematicaP1" Text="{Binding sumaTematicaP1}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="TematicaP2" Text="{Binding sumaTematicaP2}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>
                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="PersonajesP1" Text="{Binding sumaPersonajesP1}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="PersonajesP2" Text="{Binding sumaPersonajesP2}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="SangreP1" Text="{Binding sumaSangreP1}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="SangreP2" Text="{Binding sumaSangreP2}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="DeluxeP1" Text="{Binding sumaDeluxeP1}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Label x:Name="DeluxeP2" Text="{Binding sumaDeluxeP2}" FontSize="Medium" FontAttributes="Bold" IsVisible="False"/>
                </StackLayout>
            </Grid>


            <Grid Grid.Row="1" BackgroundColor="#ff0000" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid Grid.Row="0" Grid.Column="0">
                        <StackLayout HorizontalOptions="Center">
                            <Label  Text="Player 2 :" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                        </StackLayout>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label x:Name="Player2" Text="{Binding player2}" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                        </StackLayout>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <StackLayout HorizontalOptions="Center">
                            <Label  Text="Puntos Totales :" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                        </StackLayout>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" >
                        <StackLayout HorizontalOptions="Start">
                            <Label x:Name="TotalFinalP2" Text="{Binding sumaTotalP2}" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Start" TextColor="White"/>
                        </StackLayout>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="0">
                    <StackLayout HorizontalOptions="Center">
                            <Label Text="Respuestas :" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                    </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <StackLayout HorizontalOptions="Start">
                            <Label x:Name="RespuestaP2" Text="{Binding respuestasP2}" FontSize="Medium" FontAttributes="Bold" TextColor="White"/>
                    </StackLayout>
                </Grid>

            </Grid>
         </Grid>
         
            <Grid Grid.Row="2" BackgroundColor="#810c96">
                <Grid Grid.Row="0" Grid.Column="0">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="Ganador :" FontSize="Medium" FontAttributes="Bold" TextColor="Gold"/>
                    </StackLayout>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">    
                    <StackLayout HorizontalOptions="Center">
                        <Label x:Name="GanadorTexto" Text="{Binding ganador}" FontAttributes="Bold" FontSize="Medium" TextColor="Gold"/>
                    </StackLayout>
                </Grid>
            </Grid>

            <Grid Grid.Row="3" BackgroundColor="White">
                <Button Text="Guardar" Clicked="registrarResultado"  BorderRadius="50" FontAttributes="Bold" BackgroundColor="#44c767" FontSize="Large" TextColor="White" />
            </Grid>

        </Grid>

    </ScrollView>
    
   
</ContentPage>